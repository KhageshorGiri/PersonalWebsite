@model IEnumerable<personal_web.Models.Contact>

@{
    ViewBag.Title = "Index";
}

<div class="table-responsive mt-4">
    <table class="table table-striped" id="contactDetailsIndex">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>Action</th>
            </tr>
        </thead>

        <tdbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                    <td>
                        <button class="btn btn-sm btn-success">
                            @Html.ActionLink("Response", "Details", new { id = item.ContactID })
                        </button>
                        <button class="btn btn-sm btn-danger">
                            @Html.ActionLink("Delete", "Delete", new { id = item.ContactID })
                        </button>
                        |
                        
                    </td>
                </tr>
            }
        </tdbody>


    </table>

</div>

@section Scripts{


    <link href="~/Scripts/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/datatables/jquery.dataTables.min.js"></script>
    <script>

        $(document).ready(function () {

            $("#contactDetailsIndex").DataTable();

        });


    </script>

}