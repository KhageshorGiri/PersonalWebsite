
@model IEnumerable<personal_web.Models.Skill>

@{
    ViewBag.Title = "Skills";
    Layout = null;
}

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="split">
            <div>
                <p>
                    @item.Description

                </p>
                @foreach (var skill in item.SkillAttributes)
                {
                    <div class="skills__data">
                        <div class="skills__names">
                            <span class="skills__name">@skill.SkillTitle</span>
                        </div>
                        <div class="skills__bar skills__html">

                        </div>
                    </div>
                }

              </div>
            <div class="about-img">
                <img src="@item.Image">
            </div>
        </div>


    }
}

