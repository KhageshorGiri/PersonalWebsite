@model IEnumerable<personal_web.Models.Home>


@{
    //Layout = "~/Views/Shared/_webLayout.cshtml";
    Layout = null;
}


@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="flex inner-main-section split">
            <div class="left-section item-center flex-1">
                <img src="@item.Image">
            </div>
            <div class="right-section flex-1">
                <h6>@item.FullName</h6>
                <h1><span> @item.TitleDescription </span></h1>
                <p class="home-description">
                    @item.Introduction
                </p>
                <div>
                    <a href="#contact" class="btn btn-primary">Contact</a>
                </div>
                <div class="home__social">
                    <a href="" class="home__social-icon "><i class='bx bxl-facebook'></i></a>
                    <a href="" class="home__social-icon home-social-icon-p"><i class='bx bxl-instagram'></i></a>
                    <a href="" class="home__social-icon home-social-icon-p"><i class='bx bxl-linkedin'></i></a>
                </div>
            </div>
        </div>

    }
}
