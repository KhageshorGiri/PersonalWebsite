
@model IEnumerable<personal_web.Models.Blog>
@using personal_web.Helpers;
@{
    ViewBag.Title = "BlogDetails";
    Layout = "~/Views/Shared/_webLayout.cshtml";

}


<link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<style>

    .colomn-bg {
    }

    .blog_bg {
        margin: 4rem 0;
    }

    .work-hr {
        margin: 0;
        padding: 0;
        background-color: hotpink;
    }

    .work__container {
        background-color: aliceblue;
        margin: 0.9rem 0.3rem;
        padding: 1rem;
        border-radius: 2%;
    }

    .work-title {
        font-size: 0.9rem;
    }
</style>

<!--===== HEADER =====-->
<header class="l-header">
    <nav class="nav bd-grid">
        <div>
            <a href="#" class="nav__logo">
                KG
            </a>
        </div>

        <div class="nav__menu" id="nav-menu">
            <ul class="nav__list">
                <li class="nav__item"><a href="@Url.Action("Index","Home")" class="nav__link ">Home</a></li>
                <li class="nav__item"><a href="@Url.Action("Index","Home")" class="nav__link">About</a></li>
                <li class="nav__item"><a href="@Url.Action("Index","Home")" class="nav__link">Skills</a></li>
                <li class="nav__item"><a href="@Url.Action("Index","Home")" class="nav__link active">Work</a></li>
                <li class="nav__item"><a href="@Url.Action("Index","Home")" class="nav__link">Contact</a></li>
            </ul>
        </div>

        <div class="nav__toggle" id="nav-toggle">
            <i class='bx bx-menu'></i>
        </div>
    </nav>
</header>
@if (Model.Count() > 0)
{
    <section class="blog_bg section">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {

                    var title = Html.ClearnUrl(item.Title);
                    var category = Html.ClearnUrl(item.BlogCategory.Category);
                    <div class="col-md-4 colomn-bg">
                        <div class="work__container">
                            <a href="@Url.Action("Blog","Home", new {id=item.BlogID, title=title, category=category})" class="work__img">

                                <img src="@item.Image" alt="" style="border-radius: 0.4rem;">
                                <div>
                                    <p style="font-size:14px; margin-top:0.3rem;">@item.Date</p>
                                    <h6 class="work-title">@item.Title</h6>
                                    @*  <hr class="work-hr">
                                    *@
                                </div>
                            </a>
                        </div>

                    </div>
                }

            </div>
        </div>
    </section>
}



<!--===== FOOTER =====-->
<footer class="footer-section section">
    <div class="container">
        <h2 class="text-center text-title">@ViewBag.Name</h2>
        <div class="footer__social">
            <a href="#" class="footer__icon"><i class='bx bxl-facebook'></i></a>
            <a href="#" class="footer__icon"><i class='bx bxl-instagram'></i></a>
            <a href="#" class="footer__icon"><i class='bx bxl-twitter'></i></a>
        </div>
        <p class="footer__copy">&#169; @ViewBag.Name. All rigths reserved</p>
    </div>

</footer>


