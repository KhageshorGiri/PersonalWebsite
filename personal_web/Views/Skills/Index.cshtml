@model IEnumerable<personal_web.Models.Skill>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="table-responsive">
    <table class="table" id="skillTableDetails">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Skills</th>
                <th>Action</th>
            </tr>
        </thead>
      
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Image" style="width:60%;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @foreach (var skill in item.SkillAttributes)
                        {
                            <label>@skill.SkillTitle</label><br />
                        }
                    </td>
                    <td>
                        <bhtton class="btn btn-sm btn-warning">
                            @Html.ActionLink("Edit", "Edit", new { id = item.SkillID })
                        </bhtton>
                        <button class="btn btn-sm btn-danger">
                            @Html.ActionLink("Delete", "Delete", new { id = item.SkillID })
                        </button>
                    
                    </td>
                </tr>
            }
        </tbody>
        

    </table>

</div>


