@model IEnumerable<personal_web.Models.About>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="table-responsive">

    <table class="table table-striped" id="AboutTableIndex">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Qutation)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Action</th>
            </tr>
        </thead>
       
        <tbdoy>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Image"  style="width:60%; height:auto;"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qutation)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <button class="btn btn-sm btn-warning">
                            @Html.ActionLink("Edit", "Edit", new { id = item.AboutID })
                        </button>
                        <button class="btn btn-sm btn-danger">
                            @Html.ActionLink("Delete", "Delete", new { id = item.AboutID })
                        </button>
                      
                    </td>
                </tr>
            }
        </tbdoy>


    </table>

</div>

